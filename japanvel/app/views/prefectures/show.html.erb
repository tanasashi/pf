<投稿について></br>

 <% @posts.each do |post| %>
   <%= attachment_image_tag post, :image, :fill, 300, 300 %></br>
   場所名<%= post.place_name %></br>
   住所<%= post.address %></br>
   詳細<%= post.detail %></br>

 <% if post.user == current_user %>
   <%= link_to "edit", edit_post_path(post) %>
   <%= link_to "Destroy", post_path(post), method: :delete, data: { confirm: "削除してもよろしいですか？", cancel: "やめる", commit: "削除する"}, title: "削除の確認" %>
<% end %>

<% if user_signed_in? %>
 <% if post.bookmarked_by?(current_user) %>
    <%= link_to "ブックマークを外す", post_bookmarks_path(post), method: :delete %></br>
    <% else %>
    <%= link_to "ブックマークに追加する", post_bookmarks_path(post), method: :post %></br>
 <% end %>
<% end %>

 <% end %>

