<main>
  <div class="container">
    <div class="alert alert-dark" role="alert">
     <h3 class="text-center">ユーザー情報 </h3>
    </div>
    <div class="col-sm-8">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @user.name %></td>
            <td><%= @user.email %></td>
            <% if user_signed_in? && current_user.email == "guest@gst.com" %>
            <% else %>
              <td><%= link_to "編集する", users_mypage_edit_path, class: "btn btn-success", data: {"turbolinks" => false} %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</main>