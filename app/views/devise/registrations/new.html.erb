<main>  
  <div class="md-auto">
    <div class="container">
      <div class="row no-gutters">
        <div class="col-md-6 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
           <h3 class="text-dark bg-light py-4 mb-0">
             <strong>新規登録</strong>
            </h3>
  
          <div class="form-body p-4">
            <p>名前とメールアドレスと<br>パスワードを入力してください。</p>
            <div class="mx-auto text-center">
              <p>
                <font color="red">
                  <%= render "devise/shared/error_messages", resource: resource %>
                </font>
              </p>
            </div>
              <div class="new_user">
                <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  
                  <div class="field"></br>
                    <%= f.text_field :name, :size=>"45", autofocus: true, autocomplete: "name", placeholder: "名前", class: "form-control" %>
                  </div>
                  <div class="field"></br>
                    <%= f.email_field :email, :size=>"45", autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
                  </div>
                  <div class="field"></br>
                    <%= f.password_field :password, :size=>"45", autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
                  </div>
                  <div class="field"></br>
                    <%= f.password_field :password_confirmation, :size=>"45", autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control" %>
                  </div>
                  <div class="field"></br>
                    <%= f.submit "新規登録", class: "btn btn-outline-dark" %>
                  </div>
                <% end %>
            </div>
          </div><!--form-body p-4-->
        </div><!--col sm-5-->
      </div><!--row no-gutters-->
    </div><!--container-->
  </div><!--md-auto-->
</main>  
